@page "/coffees"
@inject ICoffeeService coffeeService

<h1>Coffees</h1>

@if (coffees is null)
{
    <span>Loading....</span>
} else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach( var c  in coffees)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.Description</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<Coffee>? coffees = null;

    protected override async Task OnInitializedAsync()
    {
        coffees = await coffeeService.LoadCoffeesAsync();    
        base.OnInitialized();
    }

}
