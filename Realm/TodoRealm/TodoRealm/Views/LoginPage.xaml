<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoRealm.Views.LoginPage"
             xmlns:vm="clr-namespace:TodoRealm.VM"
             x:DataType="vm:LoginVM"
             BackgroundColor="#0069a6"
             Title="LoginPage">
    <ScrollView>
        <Image Source="appicon.svg" Margin="0,0,0,15"/>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
            <Frame>
                <Entry Placeholder="Email" Text="{Binding EmailText}" TextColor="#333"/>
            </Frame>
            <Frame>
                <Entry Placeholder="Password" Text="{Binding PasswordText}" TextColor="#333"/>
            </Frame>
            <Button Text="Login" Command="{Binding LoginCommand}"/>
            <Button Text="Create Account" Command="{Binding CreateAccountCommand}" Background="Transparent"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>